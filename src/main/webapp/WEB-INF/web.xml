<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Dream job</display-name>
  <servlet>
    <servlet-name>OfferServlet</servlet-name>
    <servlet-class>servlet.OfferServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>OfferEditServlet</servlet-name>
    <servlet-class>servlet.OfferEditServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CandidateServlet</servlet-name>
    <servlet-class>servlet.CandidateServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>CandidateEditServlet</servlet-name>
    <servlet-class>servlet.CandidateEditServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>IndexServlet</servlet-name>
    <servlet-class>servlet.IndexServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>OfferServlet</servlet-name>
    <url-pattern>/offers.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>OfferEditServlet</servlet-name>
    <url-pattern>/offer_edit.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CandidateServlet</servlet-name>
    <url-pattern>/candidates.do</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>CandidateEditServlet</servlet-name>
    <url-pattern>/candidate_edit.do</url-pattern>
  </servlet-mapping>
    <servlet-mapping>
    <servlet-name>IndexServlet</servlet-name>
  <url-pattern>/index.do</url-pattern>
  </servlet-mapping>
</web-app>